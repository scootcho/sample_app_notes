<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
    <div class="logobox">
      <i class="fa fa-quote-left fa-border fa-inverse"></i>
      <a href="/" id="logo">SOCIAL APP</a>
    </div>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to '<i class="fa fa-home"></i> HOME'.html_safe, root_path %></li>
          <li><%= link_to '<i class="fa fa-male"></i> ABOUT'.html_safe, about_path %></li>
          <% if signed_in? %>
            <li><%= link_to '<i class="fa fa-users"></i> FEED'.html_safe, users_path %></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-plus"></i>
                ACCOUNT <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to '<i class="fa fa-user"></i> PROFILE'.html_safe , current_user %></li>
                <li><%= link_to '<i class="fa fa-gears"></i> SETTINGS'.html_safe, edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to '<i class="fa fa-sign-out"></i> SIGN OUT'.html_safe, signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to '<i class="fa fa-sign-in"></i> SIGN IN'.html_safe, signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
